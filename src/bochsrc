# how much memory the emulated machine will have
megs: 32

# filename for ROM images
romimage: file=$HOME/software/bochs/share/bochs/BIOS-bochs-latest
vgaromimage: file=$HOME/software/bochs/share/bochs/VGABIOS-lgpl-latest.bin

# what disk images will be used
floppya: 1_44=os.img, status=inserted

# choose the boot disk
boot: a

# where do we send log messages
# log: bochsout_floppy.txt

# disable the mouse
mouse: enabled=0

# enable key mapping, using US layout as default
# keyboard: keymap=$BXSHARE/keymaps/sdl-pc-us.map
